# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Letta API Configuration  
LETTA_API_KEY=your_letta_api_key_here
LETTA_API_URL=https://api.letta.com
LETTA_AGENT_ID=your_agent_id_here

# OpenAI (optional, for audio transcription)
OPENAI_API_KEY=sk-your-openai-api-key
# Optional: override model (default: gpt-4o-mini-transcribe)
# OPENAI_TRANSCRIBE_MODEL=gpt-4o-transcribe

# Twilio (optional, for SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
# Option 1: Use a Messaging Service (recommended)
TWILIO_MESSAGING_SERVICE_SID=your_messaging_service_sid
# Option 2: Use specific From numbers (fallback)
# For SMS: E.164 format (e.g., +15551234567)
TWILIO_SMS_FROM=+15551234567
# For WhatsApp: include whatsapp: prefix (e.g., whatsapp:+15551234567)
TWILIO_WHATSAPP_FROM=whatsapp:+15551234567
# For RCS: include rcs: sender id (e.g., rcs:your_rcs_sender)
TWILIO_RCS_FROM=rcs:your_rcs_sender
# (Optional) Validate Twilio signatures (enable in production)
TWILIO_VALIDATE_SIGNATURE=true
